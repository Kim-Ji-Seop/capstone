<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpActivity">
    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/text_font_bold"
        android:text="회원가입 정보를\n입력해주세요"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/signup_outer_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_tv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/signup_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/text_font_bold"
                android:text="이메일"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_email_et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:fontFamily="@font/text_font"
                android:hint="예) example@naver.com"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/signup_email_validation_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_email_tv" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup_email_validation_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/solid_button"
                android:fontFamily="@font/text_font"
                android:text="인증코드전송"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/signup_email_et"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/signup_email_et" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/signup_hidden_email_validation_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/signup_email_validation_btn"
                app:layout_constraintTop_toBottomOf="@+id/signup_email_validation_btn">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/signup_email_validation_number_et"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:fontFamily="@font/text_font"
                    android:hint="인증번호를 입력해주세요"
                    android:padding="5dp"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_email_validation_number_btn"
                    app:layout_constraintEnd_toStartOf="@+id/signup_email_validation_number_btn"
                    app:layout_constraintTop_toTopOf="@+id/signup_email_validation_number_btn" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signup_email_validation_number_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/solid_button"
                    android:fontFamily="@font/text_font"
                    android:text="인증하기"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/signup_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/text_font_bold"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/signup_email_et"
                app:layout_constraintTop_toBottomOf="@+id/signup_hidden_email_validation_cl" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_password_et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:fontFamily="@font/text_font"
                android:hint="비밀번호를 입력해주세요"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/signup_email_validation_btn"
                app:layout_constraintStart_toStartOf="@+id/signup_email_et"
                app:layout_constraintTop_toBottomOf="@+id/signup_password_tv" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_password_validation_et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:fontFamily="@font/text_font"
                android:hint="비밀번호를 다시 입력해주세요"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/signup_password_et"
                app:layout_constraintStart_toStartOf="@+id/signup_email_et"
                app:layout_constraintTop_toBottomOf="@+id/signup_password_et" />

            <TextView
                android:id="@+id/signup_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/text_font_bold"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/signup_email_et"
                app:layout_constraintTop_toBottomOf="@+id/signup_password_validation_et" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_name_et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:fontFamily="@font/text_font"
                android:hint="이름을 입력해주세요"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/signup_password_et"
                app:layout_constraintStart_toStartOf="@+id/signup_name_tv"
                app:layout_constraintTop_toBottomOf="@+id/signup_name_tv" />

            <TextView
                android:id="@+id/signup_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/text_font_bold"
                android:text="닉네임"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/signup_email_et"
                app:layout_constraintTop_toBottomOf="@+id/signup_name_et" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/signup_nickname_et"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:fontFamily="@font/text_font"
                android:hint="닉네임을 입력해주세요"
                android:padding="5dp"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/signup_password_et"
                app:layout_constraintStart_toStartOf="@+id/signup_nickname_tv"
                app:layout_constraintTop_toBottomOf="@+id/signup_nickname_tv" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/solid_button"
                android:fontFamily="@font/text_font"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/signup_nickname_et"
                app:layout_constraintStart_toStartOf="@+id/signup_nickname_et"
                app:layout_constraintTop_toBottomOf="@+id/signup_nickname_et" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>